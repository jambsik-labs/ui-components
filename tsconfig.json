{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "declarationDir": "build",
        "module": "es2020",
        "target": "es5",
        "lib": ["es6", "dom", "es2016", "es2017"],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["components/**/*"],
    "exclude": ["node_modules", "build"]
}
